<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descrption</th>
      <th>Price</th>
      <th>Sold</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
         <td><%= product.sold %></td>
         <td><%= link_to product.user.name, user_path(product.user) %></td>  
        <td><%= link_to 'Show', product %></td>
        <td><%= button_to 'Comprar', sales_path(product) %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
